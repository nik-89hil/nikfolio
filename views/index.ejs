    <%- include('./partials/hireme') %>

    <%- include('./partials/sendMessage') %>

    <%- include('./partials/about') %>

    <%- include('./partials/fotter') %>

    <div class="staticmessagecontainer" id="staticmessagecontainer">
        <form name="submit-to-google-sheet">
            <h3>message</h3>
            <label for="Name"></label><br>
            <input type="text" name="Name" required placeholder="your name">
            <label for="Email"></label><br>
            <input type="email" name="Email" placeholder="abc@gmail.com" required>
            <label for="Message"></label><br>
            <input id="messageInput" type="text" name="Message" placeholder="write message">
            <br>
            <br>
            
            <button class="submitbutton" type="submit"><i class="fa-solid fa-paper-plane" style="color: #6ba1ff;"></i></button>
            
        </form>
    </div>
    <span id="success" >follower: <%=subscriber%></span>
    <button onclick="showchatbox()" class="staticmessage">
        <i class="fa-solid fa-message fa-fade" style="color: #6ba1ff;"></i>
    </button>
        

<script>
    // window.onload(showchatbox());
    
    function showchatbox(){
        const staticmessagecontainer = document.getElementById("staticmessagecontainer");
        // console.log(staticmessagecontainer.style.display,"from index")
        if(staticmessagecontainer.style.display === "none"){
            staticmessagecontainer.style.display = "block"
        }else{
            staticmessagecontainer.style.display = "none"
        }
    }





    // for data taken code 

    const scriptURL = 'https://script.google.com/macros/s/AKfycbwkVdwujQ0cuHWr2xKuG46QgRQYtMQNSTivGnUNS8BWZDEuq3B1bIfcsZyztXDqWqsVvg/exec'
    const form = document.forms['submit-to-google-sheet'];
    const success = document.getElementById("success");

    
  
    form.addEventListener('submit', e => {
      e.preventDefault()
      fetch(scriptURL, { method: 'POST', body: new FormData(form)})
        .then(response => {
            success.innerHTML = "Message Successfully received."

            setTimeout(function(){
                showchatbox();
                
            },1000)

            setTimeout(function(){
                success.innerHTML = "";

            },10000)

            setTimeout(function(){
                success.innerHTML = `follower: <%=subscriber%>`;

            },12000)

            

            form.reset();

           

            // setTimeout(function(){
            //     window.location.href = "https://stackoverflow.com/questions/9376596/how-do-i-redirect-to-the-current-page-using-javascript"
            // },12000)

        })
        .catch(error => console.error('Error!', error.message))
    })

</script>
    

    
    
    
    
    
    


    
    

    



    
